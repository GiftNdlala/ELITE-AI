from flask import flask, render_template, request
import pandas as pd
import joblib 

app = Flask(__CommJobs__)

#our trained machine learning model used on joblib
     model = joblib.load('Desktop_Documents_SCHOOLWORK.pkl')

#our data for skill identification 
     skills_data = pd.read_csv(Skill_Identifyer)['Skills'].tolist()

@app.router('/')
def index():
      return render_template('index.html')


@app.route('/predict', methods=['POST'])
def predict():
      user_input = request.form['user_input']


 #our skill identification function
    predicted_skills = Identify_skills (user_input, skills_data)


 #prediction function of your model
    predicted_growth = model.predict(predicted_skills)


     return render_template('results.html', predicted_growth = predicted_growth) 

def identify_skills(user_input, skills_data):
    user_input = user_input.lower()
    identified_skills = []

    for skill in skills_data:
        if skill.lower() in user_input:
            identified_skills.append(skill)

    return identified_skills

if __CommJobs__ == '__main__' :
app.run(debug=True)

